<Window x:Class="MotorMonitorWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tc="clr-namespace:Steema.TeeChart.WPF;assembly=TeeChart.WPF"
        Title="Motor Monitor (WPF + TeeChart)" Height="720" Width="1000">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="4" VerticalAlignment="Center">
            <Label Content="COM Port:" VerticalAlignment="Center" Margin="4"/>
            <ComboBox x:Name="comboPorts" Width="140" Margin="4"/>
            <Button x:Name="btnConnect" Content="Connect" Width="90" Margin="4" Click="BtnConnect_Click"/>
            <Button x:Name="btnDisconnect" Content="Disconnect" Width="90" Margin="4" Click="BtnDisconnect_Click" IsEnabled="False"/>
            <Label Content="Baud:" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <ComboBox x:Name="comboBaud" Width="100" Margin="4">
                <ComboBoxItem>9600</ComboBoxItem>
                <ComboBoxItem>115200</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="4">
            <TextBlock Text="PWM: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtPWM" Text="0" FontSize="16" FontWeight="Bold" Margin="6,0"/>
            <TextBlock Text="   RPM: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtRPM" Text="0" FontSize="16" FontWeight="Bold" Margin="6,0"/>
            <TextBlock Text="   Volt: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtVolt" Text="0.00" FontSize="16" FontWeight="Bold" Margin="6,0"/>
        </StackPanel>

        <!-- TeeChart WPF control -->
        <tc:TChart x:Name="tChart" Grid.Row="2" Margin="6"/>
    </Grid>
</Window>
